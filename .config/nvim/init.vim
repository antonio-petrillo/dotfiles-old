
set nocompatible
filetype indent plugin on

set showcmd

set hlsearch
set ignorecase
set smartcase

set number relativenumber

set backspace=indent,eol,start
set autoindent

set shiftwidth=4
set tabstop=4
set expandtab

let mapleader = "\<Space>"

nmap <leader>w :w!<cr>
nmap <leader>. :tabn<cr>
nmap <leader>, :tabp<cr>

set lazyredraw

set noerrorbells
set visualbell

set nobackup
set nowb
set noswapfile
